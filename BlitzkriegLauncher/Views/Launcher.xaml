<Window x:Class="BlitzkriegLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blitzkrieg Launcher" Height="350" Width="525" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">
    
    <Window.Resources>
        
        <Style x:Key="PakFileItemStyle" TargetType="Grid">
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
        
        <DataTemplate x:Key="PakFileItemTemplate">
            <Grid Height="35" Style="{StaticResource PakFileItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="15" Grid.Column="0" />
                <CheckBox IsChecked="{Binding IsActive}" Tag="{Binding Name}" Click="ChangePakState" VerticalAlignment="Center" Grid.Column="1" />
            </Grid>
        </DataTemplate>
        
    </Window.Resources>
    
    <Border BorderBrush="Black" BorderThickness="1">
        <!--<Border.Background>
            <ImageBrush ImageSource="Assets/background.jpg" />
        </Border.Background>-->
        <StackPanel>
            <!-- Custom window border-->
            <StackPanel>
                <TextBlock Background="Black" MouseDown="DragWindow">
                <TextBlock Text="Blitzkrieg Launcher" Margin="5,2,2,2" Foreground="White" FontSize="14" />
                    <Button Content="X"  Margin="370,5,2,2" Width="20" Background="DarkRed" Foreground="White" BorderThickness="1" Click="CloseWindow" />
                </TextBlock>
            </StackPanel>
            
            <!-- Window content-->
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListBox x:Name="lstPakFiles" HorizontalContentAlignment="Stretch" MinHeight="293" ItemTemplate="{StaticResource PakFileItemTemplate}" />
                <Button Content="Launch game" Click="LaunchGame" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
